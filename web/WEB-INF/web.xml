<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>servlets.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministracionAvanzadaServlet</servlet-name>
        <servlet-class>servlets.AdministracionAvanzadaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotemServlet</servlet-name>
        <servlet-class>servlets.TotemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidacionFuncionarioServlet</servlet-name>
        <servlet-class>servlets.ValidacionFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarFuncionarioServlet</servlet-name>
        <servlet-class>servlets.AgregarFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEliminarFuncionario</servlet-name>
        <servlet-class>servlets.ServletEliminarFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSumarUsuario</servlet-name>
        <servlet-class>servlets.ServletSumarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministracionAvanzadaServlet</servlet-name>
        <url-pattern>/AdministracionAvanzadaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotemServlet</servlet-name>
        <url-pattern>/TotemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidacionFuncionarioServlet</servlet-name>
        <url-pattern>/ValidacionFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarFuncionarioServlet</servlet-name>
        <url-pattern>/AgregarFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEliminarFuncionario</servlet-name>
        <url-pattern>/ServletEliminarFuncionario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSumarUsuario</servlet-name>
        <url-pattern>/ServletSumarUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
